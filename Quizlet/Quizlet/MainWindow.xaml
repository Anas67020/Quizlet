<Window x:Class="Quizlet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Quizlet.Views"
        xmlns:vm="clr-namespace:Quizlet.ViewModel"
        Title="Quizle" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- MainVM als DataContext -->
    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>

    <!-- DataTemplates: VM -> passende View -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:AuthVM}">
            <views:AuthView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LobbyVM}">
            <views:LobbyView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GamesVM}">
            <views:GamesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SettingsVM}">
            <views:SettingsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:StatsVM}">
            <views:StatsView/>
        </DataTemplate>

    </Window.Resources>

    <!-- Hier wird immer genau eine View angezeigt -->
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
