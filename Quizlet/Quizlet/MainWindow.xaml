<Window x:Class="Quizlet.MainWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizlet.ViewModel"
        mc:Ignorable="d"
        MinHeight="450"
        MinWidth="800"
        Title="Quizle" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFEAD0F7"/>
            <GradientStop Color="#FFB015FF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.DataContext>
        <local:VM x:Name="VM"/>
    </Window.DataContext>
    <Grid Width="800" Height="450">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Login -->
        <StackPanel Grid.RowSpan="3" x:Name="LoginSeite" Visibility="Visible" Margin="10">
            <Label FontSize="50" HorizontalAlignment="Center" Margin="20">Login</Label>

            <Label HorizontalAlignment="Center">Username Eingeben:</Label>
            <TextBox Height="25" Width="150" HorizontalAlignment="Center" Margin="10"
                 TextAlignment="Center" FontSize="15" x:Name="UsernameTbLoginSeite" Text="{Binding Username}"/>

            <Label HorizontalAlignment="Center">Passwort Eingeben:</Label>
            <PasswordBox local:PasswordHelper.Attach="True" local:PasswordHelper.Password="{Binding Password}" Height="25" Width="150" 
                         HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" FontSize="15" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Height="20" Width="100" Margin="5" x:Name="LoginBtnLoginSeite" Command="{Binding bLogin}">Einloggen</Button>
                <Button Height="20" Width="100" Margin="5" x:Name="RegisterBtnLoginSeite" Command="{Binding bRegister}">Register</Button>
            </StackPanel>
        </StackPanel>

        <!-- Register -->
        <StackPanel Grid.RowSpan="3" x:Name="RegisterSeite" Visibility="Collapsed" Margin="10">
            <Label FontSize="50" HorizontalAlignment="Center" Margin="20">Registrieren</Label>

            <Label HorizontalAlignment="Center">Username Eingeben:</Label>
            <TextBox Height="25" Width="150" HorizontalAlignment="Center" Margin="10"
                 TextAlignment="Center" FontSize="15" x:Name="UsernameTbRegisterSeite"/>

            <Label HorizontalAlignment="Center">Passwort Eingeben:</Label>
            <TextBox Height="25" Width="150" HorizontalAlignment="Center" Margin="10"
                 TextAlignment="Center" FontSize="15" x:Name="PasswortTbRegisterSeite"/>

            <Label HorizontalAlignment="Center">E-Mail Eingeben:</Label>
            <TextBox Height="25" Width="150" HorizontalAlignment="Center" Margin="10"
                 TextAlignment="Center" FontSize="15" x:Name="EmailTbRegisterSeite"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Height="20" Width="100" Margin="5" x:Name="LoginBtnRegisterSeite">Login</Button>
                <Button Height="20" Width="100" Margin="5" x:Name="RegisterBtnRegisterSeite">Registrieren</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>


 
 