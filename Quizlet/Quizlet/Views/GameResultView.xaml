<UserControl x:Class="Quizlet.Views.GameResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="av"
             av:DesignHeight="450" av:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <UserControl.Background>
        <ImageBrush ImageSource="/Views/PurpleNightSkyBackground.png" Stretch="UniformToFill"/>
    </UserControl.Background>

    <Grid Margin="25">
        <Border HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="0,0,0,0"
            CornerRadius="14"
            Padding="10"
            Background="#55000000"
            Visibility="{Binding Session.IsLoggedIn, Converter={StaticResource BoolToVis}}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding Session.CurrentUsername}"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0">
                    <TextBlock.Foreground>
                        <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                    </TextBlock.Foreground>
                </TextBlock>
                <Ellipse Width="34" Height="34" Fill="White"/>
            </StackPanel>
        </Border>
        <Border Background="#55FFFFFF" CornerRadius="16" Padding="22"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="540">

            <StackPanel HorizontalAlignment="Center">

                <TextBlock FontSize="28" FontWeight="Bold" Text="Ergebnis" Margin="0,0,0,15"
                           HorizontalAlignment="Center">
                    <TextBlock.Foreground>
                        <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                    </TextBlock.Foreground>
                </TextBlock>

                <!-- optionaler Status (z.B. Gewonnen) -->
                <TextBlock FontSize="16" Text="{Binding ResultTitle}"
                           HorizontalAlignment="Center" Margin="0,0,0,18"
                           TextWrapping="Wrap" TextAlignment="Center">
                    <TextBlock.Foreground>
                        <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                    </TextBlock.Foreground>
                </TextBlock>

                <!-- Score Box -->
                <Border Background="#33000000" CornerRadius="12" Padding="18" Margin="0,0,0,18">
                    <StackPanel>
                        <TextBlock Text="Dein Score" FontSize="14" HorizontalAlignment="Center">
                            <TextBlock.Foreground>
                                <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <TextBlock FontSize="40" FontWeight="Bold" HorizontalAlignment="Center">
                            <TextBlock.Foreground>
                                <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                            </TextBlock.Foreground>
                            <Run Text="{Binding Score}"/>
                            <Run Text=" / "/>
                            <Run Text="{Binding MaxScore}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <TextBlock Text="{Binding ResultText}" FontSize="14"
                           HorizontalAlignment="Center" TextAlignment="Center"
                           TextWrapping="Wrap" Margin="0,0,0,18">
                    <TextBlock.Foreground>
                        <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                    </TextBlock.Foreground>
                </TextBlock>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Height="35" Width="170" Margin="0,0,10,0"
                            Command="{Binding BackToLobbyCommand}"
                            Content="Zurück zur Lobby">
                        <Button.Foreground>
                            <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                        </Button.Foreground>
                        <Button.Background>
                            <ImageBrush ImageSource="/Views/PurpleButtonBackground.png"/>
                        </Button.Background>
                    </Button>

                    <Button Height="35" Width="160"
                            Command="{Binding PlayAgainCommand}"
                            Content="Nochmal spielen">
                        <Button.Foreground>
                            <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                        </Button.Foreground>
                        <Button.Background>
                            <ImageBrush ImageSource="/Views/PurpleButtonBackground.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
