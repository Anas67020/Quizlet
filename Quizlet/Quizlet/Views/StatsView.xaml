<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Quizlet.Views.StatsView" Height="117" Width="305">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <!-- Hintergrund -->
    <UserControl.Background>
        <ImageBrush ImageSource="/Views/PurpleNightSkyBackground.png"/>
    </UserControl.Background>

    <Grid Margin="20">
        <Border HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="0,0,0,0"
            CornerRadius="14"
            Padding="10"
            Background="#55000000"
            Visibility="{Binding Session.IsLoggedIn, Converter={StaticResource BoolToVis}}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding Session.CurrentUsername}"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0">
                    <TextBlock.Foreground>
                        <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
                    </TextBlock.Foreground>
                </TextBlock>
                <Ellipse Width="34" Height="34" Fill="White"/>
            </StackPanel>
        </Border>
        <!-- Zurück -->
        <Button Content="Zurück"
                Height="30"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding BackCommand}">
            <Button.Foreground>
                <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="/Views/PurpleButtonBackground.png"/>
            </Button.Background>
        </Button>

        <!-- Platzhalter -->
        <TextBlock Text="Stats kommen hier hin"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="24" Background="#FF5F379C">
            <TextBlock.Foreground>
                <ImageBrush ImageSource="/Views/LightPurpleTextBackground1.png"/>
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</UserControl>
