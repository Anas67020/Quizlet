<UserControl x:Class="Quizlet.Views.AuthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Quizlet.ViewModel">

    <!-- Hintergrund (falls Bild mal nicht lädt) -->
    <UserControl.Background>
        <SolidColorBrush Color="#FF1E1E1E"/>
    </UserControl.Background>

    <Grid>
        <!-- 1) Vollflächiger Hintergrund -->
        <Grid.Background>
            <ImageBrush ImageSource="/Views/BlueSkyBackgroundLarge.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- 2) ZENTRALER "KASTEN-BEREICH" -->
        <!--    Hier bestimmst du die Größe des Kastens.
              Height etwas größer, damit Register besser reinpasst. -->
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="520"
              Height="620">

            <!-- Kasten-Grafik -->
            <Image Source="/Views/HintergrundLeuchten.png"
                   Opacity="0.7"
                   Stretch="Fill"
                   IsHitTestVisible="False" Margin="0,0,0,108"/>

            <!-- Inhalt NUR innerhalb des Kastens -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="35">

                <Grid>
                    <!-- LOGIN -->
                    <StackPanel Visibility="{Binding LoginVisibility}">

                        <Label FontSize="40"
                               VerticalContentAlignment="Center" 
                               Padding="10,0"
                               Width="300"
                               Content="        Login" Height="63">
                            <Label.Background>
                                <ImageBrush ImageSource="/Views/UberschriftBackgroundBlackBlue.png"/>
                            </Label.Background>
                            <Label.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColorCyan2.png"/>
                            </Label.Foreground>
                        </Label>

                        <Label HorizontalAlignment="Center" Content="Username Eingeben:">
                            <Label.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </Label.Foreground>
                        </Label>

                        <TextBox Height="28"
                                 Width="220"
                                 HorizontalAlignment="Center"
                                 Margin="10"
                                 FontSize="15"
                                 Text="{Binding Username}">
                            <TextBox.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </TextBox.Foreground>
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Views/FuturisticTextboxBlue.png"/>
                            </TextBox.Background>
                        </TextBox>

                        <Label HorizontalAlignment="Center" Content="Passwort Eingeben:">
                            <Label.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </Label.Foreground>
                        </Label>

                        <PasswordBox vm:PasswordHelper.Attach="True"
                                     vm:PasswordHelper.Password="{Binding Password}"
                                     Height="28"
                                     Width="220"
                                     HorizontalAlignment="Center"
                                     Margin="10"
                                     FontSize="15">
                            <PasswordBox.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </PasswordBox.Foreground>
                            <PasswordBox.Background>
                                <ImageBrush ImageSource="/Views/FuturisticTextboxBlue.png"/>
                            </PasswordBox.Background>
                        </PasswordBox>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Height="28" Width="130" Margin="5" Command="{Binding LoginCommand}" Content="Einloggen">
                                <Button.Foreground>
                                    <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                                </Button.Foreground>
                                <Button.Background>
                                    <ImageBrush ImageSource="/Views/ButtonBackground1.png" Stretch="Fill"/>
                                </Button.Background>
                            </Button>

                            <Button Height="28" Width="130" Margin="5" Command="{Binding ShowRegisterCommand}" Content="Register">
                                <Button.Foreground>
                                    <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                                </Button.Foreground>
                                <Button.Background>
                                    <ImageBrush ImageSource="/Views/ButtonBackground2.png" Stretch="Fill"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>

                        <!-- Status / Fehler -->
                        <TextBlock Text="{Binding StatusText}"
                                   Margin="0,15,0,0"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   FontSize="14">
                            <TextBlock.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>

                    <!-- REGISTER -->
                    <StackPanel Visibility="{Binding RegisterVisibility}">

                        <Label FontSize="40"
                               VerticalContentAlignment="Center" 
                               Padding="10,0"
                               Width="294"
                               Content="   Registrieren" Height="64">
                            <Label.Background>
                                <ImageBrush ImageSource="/Views/UberschriftBackgroundBlackBlue.png"/>
                            </Label.Background>
                            <Label.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColorCyan2.png"/>
                            </Label.Foreground>
                        </Label>

                        <Label HorizontalAlignment="Center" Content="Username Eingeben:">
                            <Label.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </Label.Foreground>
                        </Label>

                        <TextBox Height="28"
                                 Width="220"
                                 HorizontalAlignment="Center"
                                 Margin="10"
                                 FontSize="15"
                                 Text="{Binding RegUsername}">
                            <TextBox.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </TextBox.Foreground>
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Views/FuturisticTextboxBlue.png"/>
                            </TextBox.Background>
                        </TextBox>

                        <Label HorizontalAlignment="Center" Content="Full-Name Eingeben:">
                            <Label.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </Label.Foreground>
                        </Label>

                        <TextBox Height="28"
                                 Width="220"
                                 HorizontalAlignment="Center"
                                 Margin="10"
                                 FontSize="15"
                                 Text="{Binding RegFullname}">
                            <TextBox.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </TextBox.Foreground>
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Views/FuturisticTextboxBlue.png"/>
                            </TextBox.Background>
                        </TextBox>

                        <Label HorizontalAlignment="Center" Content="Passwort Eingeben:">
                            <Label.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </Label.Foreground>
                        </Label>

                        <PasswordBox vm:PasswordHelper.Attach="True"
                                     vm:PasswordHelper.Password="{Binding RegPassword}"
                                     Height="28"
                                     Width="220"
                                     HorizontalAlignment="Center"
                                     Margin="10"
                                     FontSize="15">
                            <PasswordBox.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </PasswordBox.Foreground>
                            <PasswordBox.Background>
                                <ImageBrush ImageSource="/Views/FuturisticTextboxBlue.png"/>
                            </PasswordBox.Background>
                        </PasswordBox>

                        <Label HorizontalAlignment="Center" Content="E-Mail Eingeben:">
                            <Label.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </Label.Foreground>
                        </Label>

                        <TextBox Height="28"
                                 Width="220"
                                 HorizontalAlignment="Center"
                                 Margin="10"
                                 FontSize="15"
                                 Text="{Binding RegEmail}">
                            <TextBox.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </TextBox.Foreground>
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Views/FuturisticTextboxBlue.png"/>
                            </TextBox.Background>
                        </TextBox>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Height="28" Width="130" Margin="5" Command="{Binding ShowLoginCommand}" Content="Login">
                                <Button.Foreground>
                                    <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                                </Button.Foreground>
                                <Button.Background>
                                    <ImageBrush ImageSource="/Views/ButtonBackground2.png" Stretch="Fill"/>
                                </Button.Background>
                            </Button>

                            <Button Height="28" Width="130" Margin="5" Command="{Binding RegisterCommand}" Content="Registrieren">
                                <Button.Foreground>
                                    <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                                </Button.Foreground>
                                <Button.Background>
                                    <ImageBrush ImageSource="/Views/ButtonBackground1.png" Stretch="Fill"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>

                        <!-- Status / Fehler -->
                        <TextBlock Text="{Binding StatusText}"
                                   Margin="0,15,0,0"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   FontSize="14">
                            <TextBlock.Foreground>
                                <ImageBrush ImageSource="/Views/TextBackgroundColor.png"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
